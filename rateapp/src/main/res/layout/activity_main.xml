<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/im_bg_app"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />


    <!--<ScrollView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_centerInParent="true">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/dp220"
                android:layout_height="@dimen/dp220"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:padding="@dimen/dp10"
                android:src="@drawable/sticker_vibratior" />

            <TextView
                android:id="@+id/txtState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/colorWhile"
                android:textSize="@dimen/sp25"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/state_vibration"
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp50"
                android:layout_centerInParent="true"
                android:padding="@dimen/dp10"
                android:src="@drawable/ic_on"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/button1"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="@dimen/dp45"
                android:layout_height="@dimen/dp45"
                android:layout_margin="@dimen/dp3"
                android:background="@drawable/selecter_app"
                android:onClick="onClick"
                android:tag="1"
                android:text="1"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp25" />

            <Button
                android:id="@+id/button2"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="@dimen/dp45"
                android:layout_height="@dimen/dp45"
                android:layout_margin="@dimen/dp3"
                android:background="@drawable/selecter_app"
                android:onClick="onClick"
                android:tag="2"
                android:text="2"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp25" />

            <Button
                android:id="@+id/button3"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="@dimen/dp45"
                android:layout_height="@dimen/dp45"
                android:layout_margin="@dimen/dp3"
                android:background="@drawable/selecter_app"
                android:onClick="onClick"
                android:tag="3"
                android:text="3"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp25" />

            <Button
                android:id="@+id/button4"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="@dimen/dp45"
                android:layout_height="@dimen/dp45"
                android:layout_margin="@dimen/dp3"
                android:background="@drawable/selecter_app"
                android:onClick="onClick"
                android:tag="4"
                android:text="4"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp25"
                android:visibility="gone" />

            <Button
                android:id="@+id/button5"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="@dimen/dp45"
                android:layout_height="@dimen/dp45"
                android:layout_margin="@dimen/dp3"
                android:background="@drawable/selecter_app"
                android:onClick="onClick"
                android:tag="5"
                android:text="5"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp25"
                android:visibility="gone" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/frame_ads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical" />
    </LinearLayout>
    <!--</ScrollView>-->

</RelativeLayout>
